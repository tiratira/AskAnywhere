<Window x:Class="AskAnywhere.AskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AskAnywhere"
        xmlns:spinner="clr-namespace:xamlSpinnersWPF"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="Manual"
        ShowInTaskbar="False"
        Title="AskDialog"
        Height="80"
        Width="107"
        Loaded="Window_Loaded"
        Topmost="True">
    <Window.DataContext>
        <local:AskDialogViewModel AskMode="ASK"
                                  AskTarget="中文"
                                  CurrentState="INPUT" />
    </Window.DataContext>
    <Grid Margin="20 22">
        <Grid.Effect>
            <DropShadowEffect BlurRadius="10"
                              Direction="-90"
                              RenderingBias="Quality"
                              Opacity="0.2"
                              ShadowDepth="2" />
        </Grid.Effect>
        <Border CornerRadius="8"
                Background="White"
                BorderThickness="1"
                BorderBrush="#A6A6A6">
            <StackPanel Orientation="Horizontal">

                <spinner:ucSpinnerDotCircle Width="20"
                                            Height="20"
                                            VerticalAlignment="Center"
                                            Margin="10 0 0 0">
                    <spinner:ucSpinnerDotCircle.RenderTransform>
                        <ScaleTransform ScaleX="0.8"
                                        ScaleY="0.8" />
                    </spinner:ucSpinnerDotCircle.RenderTransform>
                    <spinner:ucSpinnerDotCircle.Style>
                        <Style TargetType="spinner:ucSpinnerDotCircle">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentState}"
                                             Value="INPUT">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentState}"
                                             Value="FINISH">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentState}"
                                             Value="ERROR">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </spinner:ucSpinnerDotCircle.Style>

                </spinner:ucSpinnerDotCircle>

                <Border Margin="4"
                        x:Name="ModeBlock"
                        Height="26"
                        CornerRadius="4">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentState}"
                                             Value="OUTPUT">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding AskMode}"
                                             Value="ASK">
                                    <Setter Property="Background"
                                            Value="#FF5733" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding AskMode}"
                                             Value="CODE">
                                    <Setter Property="Background"
                                            Value="#7948EA" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding AskMode}"
                                             Value="TRANSLATION">
                                    <Setter Property="Background"
                                            Value="#2A82E4" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentState}"
                                             Value="FINISH">
                                    <Setter Property="Background"
                                            Value="Transparent" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentState}"
                                             Value="ERROR">
                                    <Setter Property="Background"
                                            Value="Transparent" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="16"
                               Height="16"
                               Margin="4 0 0 0">
                            <Image.Style>
                                <Style TargetType="{x:Type Image}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentState}"
                                                     Value="OUTPUT">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding AskMode}"
                                                     Value="ASK">
                                            <Setter Property="Source"
                                                    Value="/AskAnywhere;component/Resources/Icons/ask-white.png" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding AskMode}"
                                                     Value="CODE">
                                            <Setter Property="Source"
                                                    Value="/AskAnywhere;component/Resources/Icons/code-white.png" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding AskMode}"
                                                     Value="TRANSLATION">
                                            <Setter Property="Source"
                                                    Value="/AskAnywhere;component/Resources/Icons/translation-white.png" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CurrentState}"
                                                     Value="FINISH">
                                            <Setter Property="Source"
                                                    Value="/AskAnywhere;component/Resources/Icons/smile.png" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CurrentState}"
                                                     Value="ERROR">
                                            <Setter Property="Source"
                                                    Value="/AskAnywhere;component/Resources/Icons/err-face.png" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        <TextBlock FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   Margin="4 0 4 0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentState}"
                                                     Value="OUTPUT">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CurrentState}"
                                                     Value="FINISH">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CurrentState}"
                                                     Value="ERROR">
                                            <Setter Property="Visibility"
                                                    Value="Collapsed" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding AskMode}"
                                                     Value="ASK">

                                            <Setter Property="Text"
                                                    Value="{StaticResource AskMode_Ask}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding AskMode}"
                                                     Value="CODE">

                                            <Setter Property="Text"
                                                    Value="{StaticResource AskMode_Code}" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding AskMode}"
                                                     Value="TRANSLATION">

                                            <Setter Property="Text"
                                                    Value="{StaticResource AskMode_Translation}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <TextBlock FontSize="14"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="2 0 0 0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentState}"
                                             Value="INPUT">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentState}"
                                             Value="FINISH">
                                    <Setter Property="Visibility"
                                            Value="Visible" />
                                    <Setter Property="Foreground"
                                            Value="#555" />
                                    <Setter Property="Text"
                                            Value="{DynamicResource Ask_Done}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentState}"
                                             Value="OUTPUT">
                                    <Setter Property="Visibility"
                                            Value="Visible" />
                                    <Setter Property="Foreground"
                                            Value="#555" />
                                    <Setter Property="Text"
                                            Value="{DynamicResource Ask_Thinking}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentState}"
                                             Value="ERROR">
                                    <Setter Property="Visibility"
                                            Value="Visible" />
                                    <Setter Property="Foreground"
                                            Value="#555" />
                                    <Setter Property="Text"
                                            Value="{DynamicResource Ask_Error}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <Border VerticalAlignment="Center"
                        x:Name="TargetBlock"
                        Margin="0 0 4 0"
                        Height="26"
                        Background="#ccc"
                        CornerRadius="4">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentState}"
                                             Value="OUTPUT">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentState}"
                                             Value="FINISH">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentState}"
                                             Value="ERROR">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="{Binding AskTarget}"
                               Foreground="#555"
                               Margin="4 0"
                               VerticalAlignment="Center"
                               FontWeight="Bold">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentState}"
                                                 Value="OUTPUT">
                                        <Setter Property="Visibility"
                                                Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CurrentState}"
                                                 Value="FINISH">
                                        <Setter Property="Visibility"
                                                Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding AskMode}"
                                                 Value="ASK">
                                        <Setter Property="Visibility"
                                                Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding AskTarget}"
                                                 Value="">
                                        <Setter Property="Visibility"
                                                Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>
                <TextBox x:Name="InputBox"
                         Text="{Binding Prompt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         BorderThickness="0"
                         FontSize="14"
                         VerticalAlignment="Center"
                         TextWrapping="Wrap"
                         MaxWidth="320"
                         IsVisibleChanged="InputBox_IsVisibleChanged"
                         TextChanged="InputBox_TextChanged">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentState}"
                                             Value="OUTPUT">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentState}"
                                             Value="FINISH">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return"
                                    Command="{Binding ConfirmCommand}" />
                        <KeyBinding Key="Esc"
                                    Command="{Binding CancelCommand}" />
                        <KeyBinding Key="Space"
                                    Command="{Binding ModeCommand}"
                                    CommandParameter="{Binding ElementName=InputBox}" />
                    </TextBox.InputBindings>
                </TextBox>
                <TextBlock x:Name="HintBox"
                           Text="{DynamicResource AskMode_Hint}"
                           Foreground="#aaa"
                           FontSize="14"
                           VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentState}"
                                             Value="OUTPUT">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentState}"
                                             Value="FINISH">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentState}"
                                             Value="ERROR">
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
